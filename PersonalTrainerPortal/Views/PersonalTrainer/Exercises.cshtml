@model IEnumerable<PersonalTrainerPortal.Models.Data.Exercise>

@{
    ViewBag.Title = "Exercises";
}

<div ng-controller="ExerciseController">
    <div class="container_styled_1">
        <div class="container margin_100_35">
            <div class="row">
                <aside class="col-md-5" id="sidebar">
                    <div class="col-md-12">
                        <div class="box_style_6">
                            <hr class="styled_2">
                            <div>
                                <h3>Create Exercise</h3>
                            </div>
                            <div class="menu-wrapper">
                                <form>
                                    <label>Exercise Name</label>
                                    <label>Exercise Description</label>
                                    <label>Tags</label>
                                </form>


                            </div><!--wrapper_indent -->

                        </div>
                    </div>
                </aside>
                <div class="col-md-7">
                    <div class="box_style_6">
                        <hr class="styled_2">
                        <div class="indent_title_in">
                            <i class="icon_archive_alt"></i>
                            <h3>My Exercises</h3>
                        </div>
                        <div class="wrapper_indent">


                            <div class="table-responsive">

                                <table class="table table-striped">
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Title)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Description)
                                        </th>
                                        <th></th>
                                    </tr>

                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Title)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Description)
                                            </td>
                                            <td>
                                                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                                                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                                                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                                            </td>
                                        </tr>
                                    }

                                </table>
                            </div>
                        </div><!--wrapper_indent -->

                    </div>
                </div>

            </div><!--End row -->
        </div><!--End container -->
    </div>

</div>
