


    <div class="modal fade" id="login" tabindex="-1" role="dialog" aria-labelledby="myLogin" aria-hidden="true" ng-controller="LoginController">
        <div class="modal-dialog">
            <div class="modal-content modal-popup">
                <a href="#" class="close-link"><i class="icon_close_alt2"></i></a>
                <form class="popup-form" id="myLogin">
                    <p class="text-danger"><strong>{{errorMessage}}</strong></p>
                    <input type="text" class="form-control form-white" ng-model="user.email" placeholder="Email" />
                    <input type="text" class="form-control form-white" ng-model="user.password" placeholder="Password" />
                    <div class="checkbox-holder text-left">
                        <div class="checkbox">
                            <input type="checkbox" value="accept_1" id="check_1" name="check_1" />
                            <label for="check_1">
                                <span>I Agree to the <strong>Terms &amp; Conditions</strong></span>
                            </label>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-submit" ng-click="LoginUser(user)">Submit</button>
                </form>
            </div>
        </div>
    </div>


